        function loadRekapSiswa() {
            const tableBody = document.getElementById('rekap-siswa');
            tableBody.innerHTML = '';
            
            const rekapData = [
                { nama: "Ahmad Rizki", hadir: 24, terlambat: 2, persentase: "96%", keterangan: "Sangat Baik" },
                { nama: "Budi Santoso", hadir: 22, terlambat: 5, persentase: "88%", keterangan: "Baik" },
                { nama: "Citra Dewi", hadir: 25, terlambat: 0, persentase: "100%", keterangan: "Sempurna" },
                { nama: "Eko Prasetyo", hadir: 20, terlambat: 8, persentase: "80%", keterangan: "Cukup" },
                { nama: "Fira Amanda", hadir: 23, terlambat: 3, persentase: "92%", keterangan: "Baik" }
            ];
            
            rekapData.forEach(siswa => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${siswa.nama}</td>
