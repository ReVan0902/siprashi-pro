        // FUNGSI UTILITAS
        function showPage(pageId) {
            // Sembunyikan semua halaman
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Tampilkan halaman yang dipilih
            const activePage = document.getElementById(pageId);
            if (activePage) {
                activePage.classList.add('active');
            }
            
            // Update judul halaman
            const pageTitle = document.getElementById('page-title');
            const navLink = document.querySelector(`[data-page="${pageId}"] span`);
            if (navLink) {
                pageTitle.textContent = navLink.textContent;
            }
            
            // Update menu aktif
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            document.querySelector(`[data-page="${pageId}"]`).classList.add('active');
        }

        function loadSiswaTable() {
            const tableBody = document.getElementById('table-siswa');
            tableBody.innerHTML = '';
            
            siswaData.forEach(siswa => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${siswa.nis}</td>
                    <td>${siswa.nama}</td>
                    <td>${siswa.kelas}</td>
                    <td>${siswa.rfid}</td>
                    <td><span class="status ${siswa.status === 'Aktif' ? 'on-time' : 'absent'}">${siswa.status}</span></td>
                    <td>
                        <button class="btn btn-sm btn-secondary">Edit</button>
                        <button class="btn btn-sm btn-danger">Hapus</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }

        function loadPresensiTable() {
            const tableBody = document.getElementById('table-presensi-masuk');
            tableBody.innerHTML = '';
            
            presensiData.forEach(presensi => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${presensi.nama}</td>
                    <td>${presensi.waktu}</td>
                    <td><span class="status ${presensi.status === 'Tepat Waktu' ? 'on-time' : 'late'}">${presensi.status}</span></td>
                    <td>${presensi.keterangan}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        function loadAktivitasPresensi() {
            const tableBody = document.getElementById('aktivitas-presensi');
            tableBody.innerHTML = '';
            
            presensiData.forEach(presensi => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${presensi.nama}</td>
                    <td>${presensi.waktu}</td>
                    <td><span class="status ${presensi.status === 'Tepat Waktu' ? 'on-time' : 'late'}">${presensi.status}</span></td>
                    <td>${presensi.keterangan}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        function loadPresensiKeluar() {
